<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_live">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.click2eat.app.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_visited"
        android:name="com.click2eat.app.ui.visited.VisitedFragment"
        android:label="@string/title_visited"
        tools:layout="@layout/fragment_visited" />

    <fragment
        android:id="@+id/navigation_live"
        android:name="com.click2eat.app.ui.live.LiveFragment"
        android:label="@string/title_live"
        tools:layout="@layout/fragment_live" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.click2eat.app.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_wishlist"
        android:name="com.click2eat.app.ui.wishlist.WishlistFragment"
        android:label="@string/title_wishlist"
        tools:layout="@layout/fragment_wishlist" />

    <fragment
        android:id="@+id/restaurant_details"
        android:name="com.click2eat.app.ui.RestaurantDetailsFragment"
        tools:layout="@layout/fragment_restaurant_details" />
</navigation>