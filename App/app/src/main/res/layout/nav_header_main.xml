<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/colorPrimaryLight"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- 150px x 35.8px -->
    <ImageView
        android:id="@+id/logo_light_theme"
        android:layout_marginStart="20dp"
        android:layout_width="64dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@drawable/logo_light_theme"
        android:contentDescription="@string/logo_description" />

    <ImageView
        android:id="@+id/letters_light_theme"
        android:layout_marginStart="20dp"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@drawable/letters_light_theme"
        android:contentDescription="@string/letters_logo_description" />

</LinearLayout>